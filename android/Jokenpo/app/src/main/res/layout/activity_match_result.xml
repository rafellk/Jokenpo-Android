<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="30dip"
        android:layout_weight="30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/match_result_logged_player_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/match_result_winner"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textAlignment="center"/>

            <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/match_result_logged_player"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="15dip"
                android:layout_height="140dip"
                android:layout_width="140dip"
                android:layout_gravity="center"
                app:sriv_left_top_corner_radius="16dip"
                app:sriv_right_top_corner_radius="0dip"
                app:sriv_left_bottom_corner_radius="48dip"
                app:sriv_right_bottom_corner_radius="16dip"
                app:sriv_oval="true"/>

            <TextView
                android:id="@+id/match_result_logged_player_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/match_result_player2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/match_result_loser"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textAlignment="center"/>

            <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/match_result_player2"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="15dip"
                android:layout_height="140dip"
                android:layout_width="140dip"
                android:layout_gravity="center"
                app:sriv_left_top_corner_radius="16dip"
                app:sriv_right_top_corner_radius="0dip"
                app:sriv_left_bottom_corner_radius="48dip"
                app:sriv_right_bottom_corner_radius="16dip"
                app:sriv_oval="true"/>

            <TextView
                android:id="@+id/match_result_player2_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/match_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dip"
        android:layout_weight="40">

        <Button
            android:id="@+id/match_result_play_again_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/match_result_play_again"
            android:theme="@style/AppTheme.Button"/>

        <Button
            android:id="@+id/match_result_exit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/match_result_exit"
            android:theme="@style/AppTheme.Button"/>

    </LinearLayout>

</LinearLayout>
